<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:cardCornerRadius="14dp"
    app:cardBackgroundColor="@color/secondary_color"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/rounded_imageview_corner"
            android:id="@+id/symbol_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/symbol_image"
            android:id="@+id/symbol_txtView"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/symbol_txtView"
            app:layout_constraintLeft_toRightOf="@id/symbol_image"
            android:id="@+id/company_name_txtView"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:layout_width="76dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/company_name_txtView"
            app:layout_constraintLeft_toRightOf="@id/symbol_image"
            android:id="@+id/rec_fav_txtView"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:text="Recomendação:"
            android:alpha="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/price_txtView"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/price_txtView"
            android:id="@+id/br_txtView"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/price_txtView"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/variation_txtView"
            android:textSize="12dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/green_txt_color"
            android:text="↑ 0,53%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/variation_txtView"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/recomendation_txtView"
            android:background="@drawable/rounded_corner_green_tag"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
